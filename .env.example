# MCP Toolbox Environment Configuration

# ============================================
# Server Configuration
# ============================================

# HTTP Server Port (for HTTP SSE transport)
MCP_HTTP_PORT=8000

# HTTP Server Host
MCP_HTTP_HOST=0.0.0.0

# ============================================
# Logging Configuration
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: simple, detailed, json
LOG_FORMAT=detailed

# ============================================
# Ollama Configuration
# ============================================

# Ollama API base URL
OLLAMA_BASE_URL=http://localhost:11434

# Default model to use
OLLAMA_MODEL=llama3

# Model temperature (0.0-1.0)
OLLAMA_TEMPERATURE=0.7

# Request timeout in seconds
OLLAMA_TIMEOUT=30

# ============================================
# Development Settings
# ============================================

# Enable debug mode
DEBUG=false

# Enable CORS (for development only)
ENABLE_CORS=true

# ============================================
# Tool Configuration
# ============================================

# Network tool timeout in seconds
NETWORK_TOOL_TIMEOUT=3

# Maximum port scan attempts
MAX_PORT_SCAN_ATTEMPTS=1